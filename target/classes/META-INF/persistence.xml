<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="QuanLyBangDia">
		
		<class>entities.KhachHang</class>
		<class>entities.HoaDon</class>
		<class>entities.Dia</class>
		<class>entities.TuaDe</class>
		<class>entities.LoaiDia</class>
		<class>entities.PhieuDatTruoc</class>
		<class>entities.PhieuDatTruocID</class>
		<class>entities.ChiTietHoaDonID</class>
		<class>entities.ChiTietHoaDon</class>
		<class>entities.TaiKhoan</class>
		
		<properties>
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.SQLServerDialect" />
			<property name="javax.persistence.jdbc.driver"
				value="com.microsoft.sqlserver.jdbc.SQLServerDriver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:sqlserver://localhost:1433;databaseName=QuanLyBangDia_DB" />
			<property name="javax.persistence.jdbc.user" value="sa" />
			<property name="javax.persistence.jdbc.password" value="123456" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />

		</properties>
	</persistence-unit>
</persistence>
